{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp": "Debug"
    }
  },
  "IdentityServiceUrl": "http://identity-svc",
  "ReverseProxy": {
    "Routes": {
      "betsRead": {
        "ClusterId": "bets",
        "Match": {
          "Path": "/bets/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "bets/{**catch-all}"
          }
        ]
      },
      "betsWrite": {
        "ClusterId": "bets",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/bets/{**catch-all}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "bets/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "search/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "bets": {
        "Destinations": {
          "betsApi": {
            "Address": "http://batbet-svc"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-svc"
          }
        }
      }
    }
  }
}